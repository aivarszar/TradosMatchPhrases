<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net48</TargetFramework>
    <OutputType>Library</OutputType>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
    <LangVersion>latest</LangVersion>
    <AssemblyName>TradosMatchPhrases</AssemblyName>
    <RootNamespace>TradosMatchPhrases</RootNamespace>
  </PropertyGroup>

  <PropertyGroup>
    <PluginName>TradosMatchPhrases</PluginName>
    <Authors>Aivarszar</Authors>
    <Company>Aivarszar</Company>
    <Description>Trados Studio plugin for highlighting matching phrases between source and target text with different colors</Description>
    <Version>1.0.0</Version>
    <Copyright>Copyright Â© 2025</Copyright>
  </PropertyGroup>

